{
  "compilerOptions": {
    "module": "commonjs", // webpackでcommonjsを使用するため
    "target": "es5", // 互換性のためes5に設定
    "outDir": "./dist", // 出力ディレクトリをdistに設定
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.ts"],
  "exclude": ["./assets/**/*.ts", "./node_modules"]
}
